@model ScholarshipPortal.Models.ContactViewModel
@{
    ViewData["Title"] = "Contact Us";
}

<style>
    /* CSS Animations for Sliding Entrance */
    @@keyframes slide-in-left {
        0% {
            opacity: 0;
            transform: translateX(-50px);
        }

        100% {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes slide-in-right {
        0% {
            opacity: 0;
            transform: translateX(50px);
        }

        100% {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .animate-slide-left {
        animation: slide-in-left 0.7s ease-out forwards;
        opacity: 0;
    }

    .animate-slide-right {
        animation: slide-in-right 0.7s ease-out forwards;
        opacity: 0;
    }

    /* Staggered delay for the 4 contact blocks */
    .delay-1 {
        animation-delay: 0.1s;
    }

    .delay-2 {
        animation-delay: 0.2s;
    }

    .delay-3 {
        animation-delay: 0.3s;
    }

    .delay-4 {
        animation-delay: 0.4s;
    }
</style>

<div class="w-full pt-12 pb-24 bg-gray-50">
    <div class="text-center mb-12 max-w-2xl mx-auto px-4">
        <!-- Icon -->
        <div class="inline-flex items-center justify-center p-3 rounded-full bg-nsp-blue/10 mb-4 shadow-lg">
            <i data-lucide="send" class="w-8 h-8 text-nsp-blue"></i>
        </div>

        <!-- Title & Subtitle -->
        <h1 class="text-4xl font-extrabold text-gray-900 mb-2">
            Contact Us
        </h1>
        <p class="text-lg text-gray-600">
            Have questions or need assistance? We're here to help you with your scholarship journey
        </p>
    </div>

    <!-- Main Content Area: Form and Contact Details -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- Column 1: Send us a Message Form (2/3 width) - SLIDE IN FROM LEFT -->
        <div class="lg:col-span-2 bg-white p-8 md:p-10 rounded-xl shadow-xl border border-gray-100 animate-slide-left">

            <!-- Increased font size to text-4xl -->
            <h2 class="text-4xl font-semibold text-gray-900 mb-4 border-b pb-2 text-nsp-blue">Get in Touch</h2>
            <p class="text-gray-600 mb-6 text-sm">Fill out the form below and we'll get back to you as soon as possible</p>

            <!-- Success/Error Message Display -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg relative mb-6" role="alert">
                    <span class="block sm:inline">@TempData["SuccessMessage"]</span>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative mb-6" role="alert">
                    <span class="block sm:inline">@TempData["ErrorMessage"]</span>
                </div>
            }

            <!-- Form Start -->
            <form asp-controller="Home" asp-action="ContactUs" method="post" class="space-y-5">
                <div asp-validation-summary="ModelOnly" class="text-red-500 font-medium text-sm"></div>

                <!-- Form Inputs -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700">Full Name *</label>
                        <input asp-for="FullName" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-nsp-blue focus:border-nsp-blue transition" placeholder="Enter your name" />
                        <span asp-validation-for="FullName" class="text-xs text-red-500 mt-1 block"></span>
                    </div>
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email Address *</label>
                        <input asp-for="Email" type="email" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-nsp-blue focus:border-nsp-blue transition" placeholder="your.email@example.com" />
                        <span asp-validation-for="Email" class="text-xs text-red-500 mt-1 block"></span>
                    </div>
                </div>

                <!-- Subject, Phone, Message Inputs -->
                <div>
                    <label asp-for="Subject" class="block text-sm font-medium text-gray-700">Subject *</label>
                    <input asp-for="Subject" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-nsp-blue focus:border-nsp-blue transition" placeholder="What is this regarding?" />
                    <span asp-validation-for="Subject" class="text-xs text-red-500 mt-1 block"></span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Phone Number</label>
                    <input type="tel" name="PhoneNumber" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-nsp-blue focus:border-nsp-blue transition" placeholder="+91-XXXX-XXXXXX" />
                </div>
                <div>
                    <label asp-for="Message" class="block text-sm font-medium text-gray-700">Message *</label>
                    <textarea asp-for="Message" rows="4" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-nsp-blue focus:border-nsp-blue transition" placeholder="Tell us more about your query..."></textarea>
                    <span asp-validation-for="Message" class="text-xs text-red-500 mt-1 block"></span>
                </div>

                <!-- Submit Button -->
                <div class="pt-4">
                    <button type="submit" class="w-auto inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-nsp-blue hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-nsp-blue transition duration-150">
                        <i data-lucide="send" class="w-5 h-5 mr-2"></i>
                        Send Message
                    </button>
                </div>
            </form>
        </div>

        <!-- Column 2: Contact Info Blocks (1/3 width) - SLIDE IN FROM RIGHT with stagger -->
        <div class="space-y-6">
            <!-- Staggered animation applied to each partial view container -->
            <div class="animate-slide-right delay-1">
                @await Html.PartialAsync("_ContactInfoBlock", new ContactInfoViewModel {
                Icon = "mail",
                                Title = "Email Support",
                                Detail1 = "support@nsp.gov.in",
                                Detail2 = "helpdesk@nsp.gov.in",
                                Color = "blue"
                                })
            </div>
            <div class="animate-slide-right delay-2">
                @await Html.PartialAsync("_ContactInfoBlock", new ContactInfoViewModel {
                                Icon = "phone",
                                Title = "Phone Helpline",
                                Detail1 = "1800-555-0100 (Toll Free)",
                                Detail2 = "+91-11-3452-0800",
                                Color = "green"
                                })
            </div>
            <div class="animate-slide-right delay-3">
                @await Html.PartialAsync("_ContactInfoBlock", new ContactInfoViewModel {
                                Icon = "clock",
                                Title = "Working Hours",
                                Detail1 = "Mon - Fri: 9:00 AM - 6:00 PM",
                                Detail2 = "Sat: 9:00 AM - 1:00 PM",
                                Color = "orange"
                                })
            </div>
            <div class="animate-slide-right delay-4">
                @await Html.PartialAsync("_ContactInfoBlock", new ContactInfoViewModel {
                                Icon = "map-pin",
                                Title = "Office Address",
                                Detail1 = "Ministry of Education, Shastri Bhawan,",
                                Detail2 = "New Delhi - 110001",
                                Color = "red"
                                })
            </div>
        </div>
    </div>

</div>

<!-- Required script section for client-side validation -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}