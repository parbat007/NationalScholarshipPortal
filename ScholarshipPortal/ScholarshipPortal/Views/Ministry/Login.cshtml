@{

    ViewData["Title"] = "Ministry Login";

    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="hero-gradient min-h-screen flex items-center justify-center py-8">
    <div class="max-w-md mx-auto px-4 relative z-10">

        <div class="text-center mb-6 text-white">
            <div class="flex items-center justify-center space-x-3 mb-4">
                <div class="inline-flex items-center justify-center p-3 rounded-full bg-white/20 shadow-lg">
                    <i data-lucide="shield" class="w-8 h-8 text-white"></i>
                </div>
                <h1 class="text-3xl font-extrabold">Ministry Login</h1>
            </div>
            <p class="text-md text-gray-200">Enter credentials to continue.</p>
        </div>

        <div class="bg-white p-8 rounded-xl shadow-2xl animate-slide-up">

            <form asp-controller="Ministry" asp-action="Login" method="post" class="space-y-5">

                @if (TempData["ErrorMessage"] != null)

                {
                    <div class="bg-red-100 border border-red-400 text-red-700 p-3 rounded mb-3">

                        @TempData["ErrorMessage"]
                    </div>

                }

                <div>
                    <label class="block text-sm font-medium">Email</label>
                    <input name="email" class="w-full border p-3 rounded" />
                </div>

                <div>
                    <label class="block text-sm font-medium">Password</label>
                    <input name="password" type="password" class="w-full border p-3 rounded" />
                </div>

                <button class="w-full py-3 bg-nsp-blue text-white rounded hover:bg-blue-700">Login</button>

                <div class="text-center text-sm mt-4 pt-4 border-t">

                    New user?
                    <a asp-controller="Ministry" asp-action="Register" class="text-nsp-blue font-semibold">

                        Register Here
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>


