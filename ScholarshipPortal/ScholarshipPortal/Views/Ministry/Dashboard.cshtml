@model ScholarshipPortal.Models.MinistryDashboardViewModel

@{

    ViewData["Title"] = "Ministry Dashboard";

    Layout = "~/Views/Shared/_LayoutMinistry.cshtml";   // Correct layout

}

<!-- HEADER BANNER -->
<div class="bg-gradient-to-r from-blue-600 via-blue-400 to-orange-400 text-white py-12 px-10 rounded-b-3xl shadow-lg">
    <h1 class="text-5xl font-extrabold mb-3 drop-shadow">Ministry Dashboard</h1>
    <p class="text-lg opacity-90">Welcome, @Model.MinistryEmail</p>
</div>

<div class="max-w-7xl mx-auto -mt-10 p-8">

    <!-- STAT CARDS -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-10">

        <div class="p-6 bg-white rounded-2xl shadow-xl border hover:shadow-2xl transition">
            <h2 class="text-gray-500 text-sm font-semibold">Total Applications</h2>
            <p class="text-4xl font-extrabold text-blue-600 mt-2">@Model.TotalApplications</p>
        </div>

        <div class="p-6 bg-white rounded-2xl shadow-xl border hover:shadow-2xl transition">
            <h2 class="text-gray-500 text-sm font-semibold">Total Institutes</h2>
            <p class="text-4xl font-extrabold text-orange-500 mt-2">@Model.TotalInstitutes</p>
        </div>

        <div class="p-6 bg-white rounded-2xl shadow-xl border hover:shadow-2xl transition">
            <h2 class="text-gray-500 text-sm font-semibold">Total Students</h2>
            <p class="text-4xl font-extrabold text-green-600 mt-2">@Model.TotalStudents</p>
        </div>

    </div>

    <!-- NAVIGATION CARDS -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        <!-- STUDENT APPLICATIONS -->
        <a asp-controller="Ministry" asp-action="StudentApplications"
           class="bg-white p-8 rounded-2xl shadow-xl border hover:shadow-2xl hover:-translate-y-1 transition transform">
            <h3 class="text-2xl font-bold text-blue-600 mb-2">Student Applications</h3>
            <p class="text-gray-600">View and process all student scholarship applications</p>
        </a>

        <!-- INSTITUTE DIRECTORY -->
        <a asp-controller="Ministry" asp-action="InstituteApplications"
           class="bg-white p-8 rounded-2xl shadow-xl border hover:shadow-2xl hover:-translate-y-1 transition transform">
            <h3 class="text-2xl font-bold text-orange-500 mb-2">Institute Directory</h3>
            <p class="text-gray-600">View all registered institutes</p>
        </a>

    </div>

</div>

