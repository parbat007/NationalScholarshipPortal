@model ScholarshipPortal.Models.MinistryUser

@{

    ViewData["Title"] = "Ministry Registration";

    Layout = "~/Views/Shared/_Layout.cshtml";

}


<style>

    @@keyframes slide-in-up {

        0% {
            opacity: 0;
            transform: translateY(100px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-slide-up {
        animation: slide-in-up 0.7s ease-out forwards;
        opacity: 0;
    }
</style>

<div class="hero-gradient min-h-screen flex items-center justify-center py-8">
    <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8 relative z-10">

        <div class="text-center mb-6 text-white">
            <div class="inline-flex items-center justify-center p-4 rounded-full bg-white/20 mb-4 shadow-lg">
                <i data-lucide="shield-plus" class="w-8 h-8 text-white"></i>
            </div>
            <h1 class="text-3xl font-extrabold">Ministry Registration</h1>
            <p class="text-gray-200">Create your ministry admin account</p>
        </div>

        <div class="bg-white p-8 rounded-xl shadow-2xl border border-gray-100 animate-slide-up">

            <form asp-controller="Ministry" asp-action="Register" method="post" class="space-y-6">

                <div>
                    <label asp-for="MinistryName" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="MinistryName" class="mt-1 block w-full border border-gray-300 rounded-lg p-3" />
                    <span asp-validation-for="MinistryName" class="text-xs text-red-500"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Email" class="mt-1 block w-full border border-gray-300 rounded-lg p-3" />
                    <span asp-validation-for="Email" class="text-xs text-red-500"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Password" type="password" class="mt-1 block w-full border border-gray-300 rounded-lg p-3" />
                    <span asp-validation-for="Password" class="text-xs text-red-500"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="ConfirmPassword" type="password" class="mt-1 block w-full border border-gray-300 rounded-lg p-3" />
                    <span asp-validation-for="ConfirmPassword" class="text-xs text-red-500"></span>
                </div>

                <button class="w-full py-3 text-white bg-nsp-blue rounded-lg hover:bg-blue-700">

                    Register
                </button>

                <div class="text-center text-sm text-gray-600 mt-4 pt-4 border-t">

                    Already registered?
                    <a asp-controller="Ministry" asp-action="Login" class="text-nsp-blue font-semibold">Login Here</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
