@model ScholarshipPortal.Models.ScholarshipApplicationViewModel

<h2 class="text-xl font-semibold text-nsp-blue mb-4 border-b pb-2">Step 2: Contact, Fee & Personal Details</h2>

<div class="space-y-6">
    <!-- CONTACT DETAILS -->
    <h3 class="text-lg font-bold text-gray-800 border-l-4 border-nsp-blue pl-2">CONTACT DETAILS</h3>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
            <label asp-for="ContactState" class="block text-sm font-medium text-gray-700">STATE *</label>
            <input asp-for="ContactState" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" placeholder="Enter State" />
            <span asp-validation-for="ContactState" class="text-xs text-red-500 mt-1 block"></span>
        </div>
        <div>
            <label asp-for="ContactDistrict" class="block text-sm font-medium text-gray-700">DISTRICT *</label>
            <input asp-for="ContactDistrict" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" placeholder="Enter District" />
            <span asp-validation-for="ContactDistrict" class="text-xs text-red-500 mt-1 block"></span>
        </div>
        <div>
            <label asp-for="BlockTaluk" class="block text-sm font-medium text-gray-700">BLOCK/TALUK *</label>
            <input asp-for="BlockTaluk" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" placeholder="Enter Block" />
            <span asp-validation-for="BlockTaluk" class="text-xs text-red-500 mt-1 block"></span>
        </div>
        <div>
            <label asp-for="HouseNumber" class="block text-sm font-medium text-gray-700">HOUSE NUMBER *</label>
            <input asp-for="HouseNumber" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" />
            <span asp-validation-for="HouseNumber" class="text-xs text-red-500 mt-1 block"></span>
        </div>
        <div>
            <label asp-for="StreetNumber" class="block text-sm font-medium text-gray-700">STREET NUMBER *</label>
            <input asp-for="StreetNumber" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" />
            <span asp-validation-for="StreetNumber" class="text-xs text-red-500 mt-1 block"></span>
        </div>
        <div>
            <label asp-for="Pincode" class="block text-sm font-medium text-gray-700">PINCODE *</label>
            <input asp-for="Pincode" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" />
            <span asp-validation-for="Pincode" class="text-xs text-red-500 mt-1 block"></span>
        </div>
    </div>

    <!-- SCHEME CHOICE (Although redundant, kept for UI fidelity based on screenshot) -->
    <div class="pt-4">
        <label class="block text-sm font-medium text-gray-700">CHOOSE SCHEME APPLYING FOR</label>
        <input type="text" value="@Model.SchemeName" readonly class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3 bg-gray-100 cursor-not-allowed" />
    </div>

    <!-- FEE DETAILS -->
    <h3 class="text-lg font-bold text-gray-800 border-l-4 border-nsp-blue pl-2 pt-6">FEE DETAILS</h3>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
            <label asp-for="AdmissionFee" class="block text-sm font-medium text-gray-700">ADMISSION FEE *</label>
            <input asp-for="AdmissionFee" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" />
            <span asp-validation-for="AdmissionFee" class="text-xs text-red-500 mt-1 block"></span>
        </div>
        <div>
            <label asp-for="TuitionFee" class="block text-sm font-medium text-gray-700">TUITION FEE *</label>
            <input asp-for="TuitionFee" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" />
            <span asp-validation-for="TuitionFee" class="text-xs text-red-500 mt-1 block"></span>
        </div>
        <div>
            <label asp-for="OtherFee" class="block text-sm font-medium text-gray-700">OTHER FEE *</label>
            <input asp-for="OtherFee" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" />
            <span asp-validation-for="OtherFee" class="text-xs text-red-500 mt-1 block"></span>
        </div>
    </div>

    <!-- OTHER PERSONAL DETAILS -->
    <h3 class="text-lg font-bold text-gray-800 border-l-4 border-nsp-blue pl-2 pt-6">OTHER PERSONAL DETAILS</h3>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
            <label asp-for="IsDisabled" class="block text-sm font-medium text-gray-700">IS DISABLED *</label>
            <select asp-for="IsDisabled" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3">
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
            <span asp-validation-for="IsDisabled" class="text-xs text-red-500 mt-1 block"></span>
        </div>
        <div>
            <label asp-for="TypeOfDisability" class="block text-sm font-medium text-gray-700">TYPE OF DISABILITY</label>
            <input asp-for="TypeOfDisability" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" />
        </div>
        <div>
            <label asp-for="DisabilityPercentage" class="block text-sm font-medium text-gray-700">% OF DISABILITY</label>
            <input asp-for="DisabilityPercentage" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" />
        </div>
        <div>
            <label asp-for="MaritalStatus" class="block text-sm font-medium text-gray-700">MARITAL STATUS *</label>
            <select asp-for="MaritalStatus" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3">
                <option value="">Select</option>
                <option value="Single">Single</option>
                <option value="Married">Married</option>
                <option value="Divorced">Divorced</option>
            </select>
            <span asp-validation-for="MaritalStatus" class="text-xs text-red-500 mt-1 block"></span>
        </div>
        <div class="md:col-span-2">
            <label asp-for="ParentsProfession" class="block text-sm font-medium text-gray-700">PARENTS PROFESSION *</label>
            <input asp-for="ParentsProfession" class="mt-1 block w-full border border-gray-300 rounded-lg shadow-sm p-3" />
            <span asp-validation-for="ParentsProfession" class="text-xs text-red-500 mt-1 block"></span>
        </div>
    </div>
</div>