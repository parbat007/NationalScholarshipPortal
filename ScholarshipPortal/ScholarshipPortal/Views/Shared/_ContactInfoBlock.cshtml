@model ScholarshipPortal.Models.ContactInfoViewModel

@{
    // Determine class based on the Color property passed from the main view
    string colorClass = Model.Color switch
    {
        "red" => "text-red-600 bg-red-50",
        "green" => "text-green-600 bg-green-50",
        "orange" => "text-orange-600 bg-orange-50",
        "blue" => "text-nsp-blue bg-blue-50",
        _ => "text-gray-600 bg-gray-50"
    };
}

<!-- The main div includes a subtle shadow for better visual separation -->
<div class="bg-white p-6 rounded-xl shadow-md border border-gray-100 flex items-start space-x-4">
    <!-- Icon: Now uses the dynamic color class -->
    <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center @colorClass">
        <i data-lucide="@Model.Icon" class="w-5 h-5"></i>
    </div>

    <!-- Content -->
    <div>
        <h3 class="text-lg font-semibold text-gray-800">@Model.Title</h3>
        <p class="text-sm text-gray-600 mt-1">@Model.Detail1</p>
        <p class="text-sm text-gray-600">@Model.Detail2</p>
    </div>
</div>