@{
    ViewData["Title"] = "Forgot Password";
}

<div class="w-full pt-20 pb-24 bg-gray-50">
    <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="bg-white p-10 rounded-xl shadow-2xl border border-gray-100">
            <i data-lucide="lock" class="w-16 h-16 text-nsp-orange mx-auto mb-6"></i>
            <h1 class="text-3xl font-extrabold text-gray-900 mb-4">Reset Your Password</h1>
            <p class="text-lg text-gray-600 mb-8">
                Enter your registered Email ID or Mobile Number. We will send you instructions to reset your password.
            </p>

            <form class="space-y-4">
                <input type="text" placeholder="Email ID or Mobile Number" class="w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-nsp-blue focus:border-nsp-blue transition" />

                <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-lg shadow-lg text-white bg-nsp-blue hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-nsp-blue transition duration-150">
                    Send Reset Link
                </button>
            </form>

            <a asp-controller="Home" asp-action="Login" class="mt-6 inline-block text-gray-600 hover:text-nsp-blue font-semibold transition">Back to Login</a>
        </div>
    </div>
</div>