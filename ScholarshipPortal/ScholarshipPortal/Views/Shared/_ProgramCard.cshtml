@model ScholarshipPortal.Models.ProgramCardViewModel

@{
    // Icon Container Styling
    string iconClass = Model.Color switch
    {
        "blue" => "bg-blue-50 border-blue-200 text-blue-600",
        "orange" => "bg-orange-50 border-orange-200 text-orange-600",
        "green" => "bg-green-50 border-green-200 text-green-600",
        "red" => "bg-red-50 border-red-200 text-red-600",
        _ => "bg-gray-50 border-gray-200 text-gray-600"
    };

    // Amount Tag Styling
    string tagClass = Model.Color switch
    {
        "blue" => "bg-blue-100 text-blue-800",
        "orange" => "bg-orange-100 text-orange-800",
        "green" => "bg-green-100 text-green-800",
        "red" => "bg-red-100 text-red-800",
        _ => "bg-gray-100 text-gray-800"
    };

    // Hover Background/Shadow Styling (New logic for card interaction)
    string hoverClass = Model.Color switch
    {
        "blue" => "hover:shadow-xl hover:ring-2 hover:ring-blue-100",
        "orange" => "hover:shadow-xl hover:ring-2 hover:ring-orange-100",
        "green" => "hover:shadow-xl hover:ring-2 hover:ring-green-100",
        "red" => "hover:shadow-xl hover:ring-2 hover:ring-red-100",
        _ => "hover:shadow-xl hover:ring-2 hover:ring-gray-100"
    };
}

<!-- FIX 1: Ensure the outer container is h-full and a flex container -->
<div class="bg-white p-6 rounded-xl shadow-lg ring-1 ring-gray-100 transition duration-300 @hoverClass cursor-pointer h-full flex flex-col">

    <!-- FIX 2: Icon and Main Content Wrapper -->
    <div class="flex items-start flex-grow">
        <!-- Icon Container -->
        <div class="flex-shrink-0 w-12 h-12 rounded-lg @iconClass flex items-center justify-center border mr-4">
            <i data-lucide="@Model.Icon" class="w-6 h-6"></i>
        </div>

        <!-- Content Area: Must grow and push the description -->
        <div class="flex flex-col flex-grow">

            <div class="flex justify-between items-start mb-1">
                <h3 class="text-lg font-semibold text-gray-800">@Model.Title</h3>
            </div>

            <!-- Description: This section will stretch to fill vertical space -->
            <!-- Changed mb-2 to mb-1 and used min-h to ensure text doesn't collapse too much -->
            <p class="text-sm text-gray-500 mb-1 flex-grow min-h-[50px]">@Model.Description</p>

            <!-- Amount Tag (Pushed to the bottom) -->
            <div class="mt-auto pt-2 text-right">
                <span class="text-xs font-medium px-3 py-1 rounded-full @tagClass flex-shrink-0">
                    @Model.Amount
                </span>
            </div>
        </div>
    </div>
</div>