@model ScholarshipPortal.Models.InstituteLoginViewModel

@{
    ViewData["Title"] = "Institute Login";
}

<div class="min-h-screen bg-gradient-to-br from-blue-700 to-indigo-800 flex items-center justify-center py-8 px-4">
    <div class="w-full max-w-md bg-white p-10 rounded-xl shadow-2xl">

        <h2 class="text-3xl font-bold text-center text-blue-700 mb-6">
            Institute Login
        </h2>

        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 text-green-700 p-3 rounded mb-4 text-center font-semibold">
                @TempData["Success"]
            </div>
        }

        <form asp-action="Login" method="post">

            <div class="mb-5">
                <label asp-for="Email" class="font-medium"></label>
                <input asp-for="Email" class="form-input w-full" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-5">
                <label asp-for="Password" class="font-medium"></label>
                <input asp-for="Password" class="form-input w-full" type="password" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <span asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></span>

            <button type="submit"
                    class="bg-blue-700 hover:bg-blue-800 text-white font-semibold py-3 px-10 rounded-lg text-lg shadow-md transition-all w-full">
                Login
            </button>

            <p class="text-center mt-6 text-gray-700">
                Don’t have an account? <a href="/Institute/Register" class="text-blue-700 font-semibold">Register</a>
            </p>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
