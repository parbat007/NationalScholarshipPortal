@{
    ViewData["Title"] = "Registration Success";
}

<div class="flex justify-center items-center min-h-screen bg-gray-100 px-4">
    <div class="bg-white rounded-2xl shadow-xl p-10 max-w-lg text-center animate-fade-in">
        <div class="flex justify-center mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-green-500" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </div>

        <h1 class="text-4xl font-bold text-gray-800 mb-3">Success!</h1>

        <p class="text-gray-600 text-lg mb-8">
            Institute registration completed successfully.<br />
            You can now log in to your account.
        </p>

        <a asp-controller="Institute" asp-action="Login"
           class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg shadow transition-all">
            Proceed to Login
        </a>
    </div>
</div>

<style>
    @@keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.6s ease-out forwards;
    }
</style>
