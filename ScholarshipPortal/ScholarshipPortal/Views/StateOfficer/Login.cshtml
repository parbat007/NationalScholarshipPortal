@model ScholarshipPortal.Models.StateOfficerLoginViewModel
@{
    ViewData["Title"] = "State Officer Login";
}

<div class="min-h-screen bg-gradient-to-br from-green-700 to-green-900 flex items-center justify-center px-4">

    <div class="bg-white w-full max-w-md p-8 rounded-2xl shadow-xl">

        <!-- LOGO + TITLE -->
        <div class="flex flex-col items-center mb-6">
       

            <h2 class="text-2xl font-bold text-green-800 text-center">
                State Nodal Officer Login
            </h2>
        </div>

        <!-- SUCCESS MESSAGE -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 text-green-800 px-4 py-2 rounded-lg mb-4 text-center">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- INVALID CREDENTIALS -->
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""] != null)
        {
            <div class="bg-red-100 text-red-700 px-4 py-2 rounded-lg mb-4 text-center">
                @ViewData.ModelState[""].Errors.First().ErrorMessage
            </div>
        }

        <!-- LOGIN FORM -->
        <form asp-action="Login" method="post">

            <!-- EMAIL -->
            <label class="block mb-2 text-gray-700 font-medium">Email</label>
            <input asp-for="Email"
                   class="w-full mb-1 px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-300" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>

            <!-- PASSWORD -->
            <label class="block mt-4 mb-2 text-gray-700 font-medium">Password</label>
            <input asp-for="Password" type="password"
                   class="w-full mb-1 px-4 py-2 border rounded-lg focus:ring-2 focus:ring-green-300" />
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>

            <button type="submit"
                    class="w-full mt-6 bg-green-700 hover:bg-green-800 text-white py-2 rounded-lg font-semibold shadow">
                Login
            </button>
        </form>

        <p class="text-center mt-4 text-sm text-gray-600">
            Don’t have an account?
            <a asp-action="Register" class="text-green-700 font-semibold">Register</a>
        </p>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
